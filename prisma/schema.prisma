
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  libraries Library[]
}

model Library {
  id        String   @id @default(cuid())
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  books     BookEntry[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
}

model BookEntry {
  id          String   @id @default(cuid())
  googleId    String
  title       String
  authors     String?
  thumbnail   String?
  totalPages  Int?
  currentPage Int      @default(0)
  rating      Int?
  notes       String?
  library     Library  @relation(fields: [libraryId], references: [id])
  libraryId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
